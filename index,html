        // Load cameras into grid
        function loadCameras() {
            const grid = document.getElementById('mainCameraGrid');
            grid.innerHTML = '';
            
            cameraData.forEach(camera => {
                const cameraItem = document.createElement('div');
                cameraItem.className = 'camera-item';
                cameraItem.id = `camera-${camera.id}`;
                cameraItem.dataset.cameraId = camera.id;
                
                // Imagens de c√¢mera de seguran√ßa urbanas
                const imageUrls = [
                    'https://images.unsplash.com/photo-1519501025264-65ba15a82390?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1542744095-fcf48d80b0fd?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1532978379173-523e6a4a115e?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1512917774080-9991f1c4c750?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1487956382158-bb926046304a?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1449824913935-59a10b8d2000?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1477959858617-67f85cf4f1df?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1449824913935-59a10b8d2000?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1480714378408-67cf0d13bc1b?w=800&h=450&fit=crop',
                    'https://images.unsplash.com/photo-1477959858617-67f85cf4f1df?w=800&h=450&fit=crop'
                ];
                
                const imgIndex = (camera.id - 1) % imageUrls.length;
                const cameraImage = imageUrls[imgIndex];
                
                cameraItem.innerHTML = `
                    <img src="${cameraImage}" class="camera-feed" alt="Camera Feed">
                    <div class="camera-overlay">
                        <div class="camera-name">${camera.name.split(':')[0]}</div>
                        <div class="camera-status ${camera.status === 'active' ? 'status-active' : 'status-warning'}">
                            ${camera.status === 'active' ? 'ACTIVE' : 'ALERT'}
                        </div>
                    </div>
                `;
                
                // Configurar detec√ß√£o de duplo clique
                cameraItem.addEventListener('click', handleCameraClick);
                
                grid.appendChild(cameraItem);
                updateCameraEffects(cameraItem, camera.id);
            });
        }
        
        // Manipulador de clique na c√¢mera
        function handleCameraClick(e) {
            const cameraId = parseInt(e.currentTarget.dataset.cameraId);
            const camera = cameraData.find(c => c.id === cameraId);
            
            clickCount++;
            
            if (clickCount === 1) {
                clickTimer = setTimeout(function() {
                    // Clique √∫nico
                    if (systemControls.vehicleTracking) {
                        toggleCameraTracking(cameraId);
                    } else {
                        showCameraDetails(camera);
                    }
                    clickCount = 0;
                }, 300);
            } else if (clickCount === 2) {
                // Duplo clique - abrir em tela cheia
                clearTimeout(clickTimer);
                openCameraFullscreen(camera);
                clickCount = 0;
            }
        }
        
        // Abrir c√¢mera em tela cheia
        function openCameraFullscreen(camera) {
            if (!camera) return;
            
            currentFullscreenCamera = camera.id;
            
            // Atualizar modal com dados da c√¢mera
            document.getElementById('modalCameraName').textContent = camera.name;
            document.getElementById('modalCameraInfo').textContent = 
                `${camera.location} ‚Ä¢ Resolution: ${camera.resolution} ‚Ä¢ FPS: ${camera.fps}`;
            
            // Usar a mesma imagem mas em resolu√ß√£o maior
            const imageUrls = [
                'https://images.unsplash.com/photo-1519501025264-65ba15a82390?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1542744095-fcf48d80b0fd?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1532978379173-523e6a4a115e?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1512917774080-9991f1c4c750?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1487956382158-bb926046304a?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1449824913935-59a10b8d2000?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1477959858617-67f85cf4f1df?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1449824913935-59a10b8d2000?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1480714378408-67cf0d13bc1b?w=1200&h=675&fit=crop',
                'https://images.unsplash.com/photo-1477959858617-67f85cf4f1df?w=1200&h=675&fit=crop'
            ];
            
            const imgIndex = (camera.id - 1) % imageUrls.length;
            document.getElementById('modalCameraFeed').src = imageUrls[imgIndex];
            
            // Atualizar estat√≠sticas no modal
            document.querySelectorAll('.modal-camera-stats .modal-stat')[0].textContent = `ZOOM: ${camera.zoom}`;
            document.querySelectorAll('.modal-camera-stats .modal-stat')[1].textContent = `BRIGHTNESS: ${camera.brightness}`;
            document.querySelectorAll('.modal-camera-stats .modal-stat')[2].textContent = `AUDIO: ${camera.status === 'active' ? 'ON' : 'OFF'}`;
            document.querySelectorAll('.modal-camera-stats .modal-stat')[3].textContent = `RECORDING: ${systemControls.recording ? 'YES' : 'NO'}`;
            
            // Mostrar modal
            document.getElementById('cameraModal').classList.add('active');
            
            // Atualizar estat√≠stica
            document.getElementById('fullscreenCam').innerHTML = 
                `<span style="color:#00ff88">${camera.name.split(':')[0]}</span>`;
            
            // Adicionar efeito nas outras c√¢meras
            cameraData.forEach(c => {
                if (c.id !== camera.id) {
                    const cameraElement = document.getElementById(`camera-${c.id}`);
                    if (cameraElement) {
                        cameraElement.classList.add('camera-zoomed');
                    }
                }
            });
            
            // Adicionar log
            addLog(`Fullscreen: ${camera.name} - Zoom: ${camera.zoom}`);
        }
        
        // Fechar modal de c√¢mera
        function closeCameraModal() {
            if (!currentFullscreenCamera) return;
            
            document.getElementById('cameraModal').classList.remove('active');
            
            // Remover efeito das outras c√¢meras
            cameraData.forEach(c => {
                const cameraElement = document.getElementById(`camera-${c.id}`);
                if (cameraElement) {
                    cameraElement.classList.remove('camera-zoomed');
                }
            });
            
            const camera = cameraData.find(c => c.id === currentFullscreenCamera);
            addLog(`Exited fullscreen: ${camera.name}`);
            
            // Atualizar estat√≠stica
            document.getElementById('fullscreenCam').innerHTML = 
                `<span style="color:#ffaa00">NONE</span>`;
            
            currentFullscreenCamera = null;
        }
        
        // Mostrar detalhes da c√¢mera (clique √∫nico)
        function showCameraDetails(camera) {
            const alertCount = camera.status === 'warning' ? 1 : 0;
            document.getElementById('alertCount').innerHTML = 
                `<span style="color:#ff0040">${alertCount}</span>`;
            
            addLog(`Selected: ${camera.name} - ${camera.location}`);
        }
        
        // Atualizar efeitos nas c√¢meras
        function updateCameraEffects(cameraItem, cameraId) {
            cameraItem.classList.remove('facial-analysis-active', 'thermal-vision-active', 'tracking-active', 'recording-active');
            
            if (systemControls.facialAnalysis) {
                cameraItem.classList.add('facial-analysis-active');
            }
            
            if (systemControls.thermalVision) {
                cameraItem.classList.add('thermal-vision-active');
            }
            
            const camera = cameraData.find(c => c.id === cameraId);
            if (systemControls.vehicleTracking && camera && camera.isTracked) {
                cameraItem.classList.add('tracking-active');
            }
            
            if (systemControls.recording) {
                cameraItem.classList.add('recording-active');
            }
        }
        
        // Toggle an√°lise facial
        function toggleFacialAnalysis() {
            systemControls.facialAnalysis = !systemControls.facialAnalysis;
            const btn = document.getElementById('btnFacial');
            const status = btn.querySelector('.control-status');
            
            if (systemControls.facialAnalysis) {
                btn.classList.add('active');
                status.textContent = 'ON';
                status.className = 'control-status status-on';
                addLog('Facial analysis: ACTIVATED');
            } else {
                btn.classList.remove('active');
                status.textContent = 'OFF';
                status.className = 'control-status status-off';
                addLog('Facial analysis: DEACTIVATED');
            }
            
            updateAllCameraEffects();
        }
        
        // Toggle vis√£o t√©rmica
        function toggleThermalVision() {
            systemControls.thermalVision = !systemControls.thermalVision;
            const btn = document.getElementById('btnThermal');
            const status = btn.querySelector('.control-status');
            
            if (systemControls.thermalVision) {
                btn.classList.add('active');
                status.textContent = 'ON';
                status.className = 'control-status status-on';
                addLog('Thermal vision: ACTIVATED');
                document.getElementById('cameraSectionTitle').textContent = 'THERMAL VISION - HEAT SIGNATURES';
            } else {
                btn.classList.remove('active');
                status.textContent = 'OFF';
                status.className = 'control-status status-off';
                addLog('Thermal vision: DEACTIVATED');
                document.getElementById('cameraSectionTitle').textContent = 'LIVE FEEDS - DOUBLE CLICK TO EXPAND';
            }
            
            updateAllCameraEffects();
        }
        
        // Toggle rastreamento veicular
        function toggleVehicleTracking() {
            systemControls.vehicleTracking = !systemControls.vehicleTracking;
            const btn = document.getElementById('btnTracking');
            const status = btn.querySelector('.control-status');
            
            if (systemControls.vehicleTracking) {
                btn.classList.add('active');
                status.textContent = 'ON';
                status.className = 'control-status status-on';
                addLog('Vehicle tracking: ENABLED - Click cameras to track');
                document.getElementById('cameraSectionTitle').textContent = 'TRACKING MODE - SELECT TARGET';
            } else {
                btn.classList.remove('active');
                status.textContent = 'OFF';
                status.className = 'control-status status-off';
                addLog('Vehicle tracking: DISABLED');
                document.getElementById('cameraSectionTitle').textContent = 'LIVE FEEDS - DOUBLE CLICK TO EXPAND';
                
                cameraData.forEach(camera => {
                    camera.isTracked = false;
                });
            }
            
            updateAllCameraEffects();
        }
        
        // Alternar rastreamento de c√¢mera espec√≠fica
        function toggleCameraTracking(cameraId) {
            if (!systemControls.vehicleTracking) return;
            
            const camera = cameraData.find(c => c.id === cameraId);
            if (camera) {
                camera.isTracked = !camera.isTracked;
                const cameraItem = document.getElementById(`camera-${cameraId}`);
                if (cameraItem) updateCameraEffects(cameraItem, cameraId);
                
                if (camera.isTracked) {
                    addLog(`Tracking: ${camera.name}`);
                } else {
                    addLog(`Tracking stopped: ${camera.name}`);
                }
            }
        }
        
        // Toggle grava√ß√£o
        function toggleRecording() {
            systemControls.recording = !systemControls.recording;
            const btn = document.getElementById('btnRecording');
            const status = btn.querySelector('.control-status');
            
            if (systemControls.recording) {
                btn.classList.add('active');
                status.textContent = 'ON';
                status.className = 'control-status status-on';
                addLog('Continuous recording: STARTED');
            } else {
                btn.classList.remove('active');
                status.textContent = 'OFF';
                status.className = 'control-status status-off';
                addLog('Continuous recording: STOPPED');
            }
            
            updateAllCameraEffects();
        }
        
        // Atualizar todas as c√¢meras
        function updateAllCameraEffects() {
            cameraData.forEach(camera => {
                const cameraItem = document.getElementById(`camera-${camera.id}`);
                if (cameraItem) updateCameraEffects(cameraItem, camera.id);
            });
        }
        
        // Atualizar estat√≠sticas
        function updateStats() {
            const activeCams = cameraData.filter(c => c.status === 'active').length;
            const totalCams = cameraData.length;
            document.getElementById('activeCams').textContent = `${activeCams}/${totalCams}`;
            
            const alertCams = cameraData.filter(c => c.status === 'warning').length;
            document.getElementById('alertCount').innerHTML = 
                `<span style="color:#ff0040">${alertCms}</span>`;
        }
        
        // Contador de uptime
        function startUptimeCounter() {
            let hours = 24;
            let minutes = 15;
            
            setInterval(() => {
                minutes++;
                if (minutes >= 60) {
                    hours++;
                    minutes = 0;
                }
                document.getElementById('uptimeValue').textContent = 
                    `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;
            }, 60000);
        }
        
        // Load system logs
        function loadLogs() {
            const logsContainer = document.getElementById('systemLogs');
            logsContainer.innerHTML = '';
            
            systemLogs.forEach(log => {
                const logEntry = document.createElement('div');
                logEntry.className = 'log-entry';
                logEntry.innerHTML = `
                    <span class="log-time">${log.time}</span> 
                    <span class="log-message">${log.message}</span>
                `;
                logsContainer.appendChild(logEntry);
            });
            
            logsContainer.scrollTop = logsContainer.scrollHeight;
        }
        
        // Add new log
        function addLog(message) {
            const logsContainer = document.getElementById('systemLogs');
            const now = new Date();
            const timeString = now.getHours().toString().padStart(2, '0') + ':' + 
                             now.getMinutes().toString().padStart(2, '0') + ':' + 
                             now.getSeconds().toString().padStart(2, '0');
            
            const logEntry = document.createElement('div');
            logEntry.className = 'log-entry';
            logEntry.innerHTML = `
                <span class="log-time">${timeString}</span> 
                <span class="log-message">${message}</span>
            `;
            
            logsContainer.appendChild(logEntry);
            
            if (logsContainer.children.length > 8) {
                logsContainer.removeChild(logsContainer.firstChild);
            }
            
            logsContainer.scrollTop = logsContainer.scrollHeight;
        }
        
        // Simulate live updates
        function startLiveUpdates() {
            setInterval(() => {
                const now = new Date();
                const timeString = now.getHours().toString().padStart(2, '0') + ':' + 
                                 now.getMinutes().toString().padStart(2, '0');
                
                document.querySelector('.title').textContent = `GOTHAM SURVEILLANCE ‚Ä¢ ${timeString}`;
            }, 1000);
            
            setInterval(() => {
                if (Math.random() > 0.7 && !currentFullscreenCamera) {
                    const randomIndex = Math.floor(Math.random() * cameraData.length);
                    cameraData[randomIndex].status = cameraData[randomIndex].status === 'active' ? 'warning' : 'active';
                    loadCameras();
                    updateStats();
                    
                    const camera = cameraData[randomIndex];
                    addLog(`Status change: ${camera.name} - ${camera.status === 'active' ? 'Normal' : 'Alert'}`);
                }
                
                if (Math.random() > 0.8) {
                    const messages = [
                        "Network scan: No threats detected",
                        "Satellite sync: Complete",
                        "Database update: In progress",
                        "Traffic monitoring: Active",
                        "Auto-backup: Successful"
                    ];
                    
                    const randomMessage = messages[Math.floor(Math.random() * messages.length)];
                    addLog(randomMessage);
                }
            }, 8000);
        }
    </script>
</body>
</html>
